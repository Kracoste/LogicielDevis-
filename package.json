{
  "name": "logiciel-devis-moderne",
  "version": "2.0.0",
  "description": "Logiciel de devis moderne avec Electron, Tailwind CSS et Supabase",
  "main": "src/main/main.js",
  "homepage": ".",
  "author": {
    "name": "Alain",
    "email": "alain@example.com"
  },
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run watch-css\" \"electron . --dev\"",
    "build": "npm run build-css && electron-builder",
    "watch-css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css --watch",
    "build-css": "tailwindcss -i ./src/renderer/styles/input.css -o ./src/renderer/styles/output.css --minify",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tailwindcss": "^3.4.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "electron-store": "^8.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "puppeteer-core": "^24.16.2",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.alain.logiciel-devis",
    "productName": "Logiciel de Devis",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
